<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Prodavnica nameštaja - Vujčin Slobodan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/skripta.js" type="text/javascript"></script>
    <script src="~/Scripts/print.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.19/api/fnReloadAjax.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>

</head>
<body>

    




    <div id="container-fluid">
        <header class="container-fluid">
            <div class="navbar navbar-inverse">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Prodavnica nameštaja", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Salon", "Index", "tblSalons")</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Korisnici", "Index", "AspNetUsers")</li>
                            <li>@Html.ActionLink("Kategorija Nameštaja", "Index", "tblKategorijaNamestajas")</li>
                            <li>@Html.ActionLink("Komad Nameštaja", "Index", "tblKomadNamestajas")</li>
                            <li>@Html.ActionLink("Račun", "Index", "tblRacuns")</li>
                            <li>@Html.ActionLink("Izveštaji", "Index", "Izvestaji")</li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Kategorija Nameštaja", "Index", "tblKategorijaNamestajas")</li>
                            <li>@Html.ActionLink("Komad Nameštaja", "Index", "tblKomadNamestajas")</li>
                            <li>@Html.ActionLink("Račun", "Index", "tblRacuns")</li>
                        }


                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Korisnici", "Index", "AspNetUsers")</li>
                            <li>@Html.ActionLink("Salon", "Index", "tblSalons")</li>
                            <li>@Html.ActionLink("Kategorija Namestaja", "Index", "tblKategorijaNamestajas")</li>
                            <li>@Html.ActionLink("Komad Namestaja", "Index", "tblKomadNamestajas")</li>
                            <li>@Html.ActionLink("Racun", "Index", "tblRacuns")</li>*@

                    </ul>
                    @Html.Partial("_LoginPartial") 
                </div>

            </div>
        </header>




        <div class="container body-content">
            @RenderBody()
        </div>

        








            <footer id="footer" style="background-color:#007bff !important" class="container-fluid text-white ">
                <p class="text-white text-center" style="color:white !important">&copy; @DateTime.Now.Year - Prodavnica Nameštaja - Slobodan Vujčin</p>
            </footer>
        
    </div>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
