@model IEnumerable<shanuMVCUserRoles.tblSalon>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary">Saloni namestaja</h2>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
@*AKO JE PRIJAVLJEN KAO ADMIN DA POKAZUJE CELU TABELU*@
@if (User.IsInRole("Admin"))
{
    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalSalon">Dodaj Salon</button>
    <br />
    <br />*@
    <table class="table table-striped table-hover" id="tblSalon">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Naziv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vlasnik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WebStranica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PIB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrojZiroRacuna)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vlasnik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WebStranica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PIB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojZiroRacuna)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SalonId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SalonId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SalonId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    

    @*otvaranje modala*@
    <div class="modal fade" id="modalSalon" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Dodaj novi salon</h4>
                </div>
                <form id="addFormSalon">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="nazic">Ime salona:</label>
                            <input type="text" class="form-control" id="naziv" name="naziv">
                        </div>
                        <div class="form-group">
                            <label for="vlasnik">Vlasnik:</label>
                            <input type="text" class="form-control" id="vlasnik" name="vlasnik">
                        </div>
                        <div class="form-group">
                            <label for="adresa">Adresa:</label>
                            <input type="text" class="form-control" id="adresa" name="adresa">
                        </div>
                        <div class="form-group">
                            <label for="telefon">Telefon:</label>
                            <input type="number" class="form-control" id="telefon" name="telefon">
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="email">Web stranica:</label>
                            <input type="text" class="form-control" id="webStranica" name="webStranica">
                        </div>
                        <div class="form-group">
                            <label for="pib">PIB:</label>
                            <input type="number" class="form-control" id="pib" name="pib">
                        </div>
                        <div class="form-group">
                            <label for="brojZiroRacuna">Broj ziro racuna:</label>
                            <input type="text" class="form-control" id="brojZiroRacuna" name="brojZiroRacuna">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="dodajSalon">Dodaj salon</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Zatvori</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


